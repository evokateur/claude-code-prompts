{
  "includeCoAuthoredBy": false,
  "env": {
    "DISABLE_BUG_COMMAND": "1",
    "DISABLE_ERROR_REPORTING": "1",
    "DISABLE_NON_ESSENTIAL_MODEL_CALLS": "1",
    "DISABLE_TELEMETRY": "1"
  },
  "permissions": {
    "allow": [
      "Bash(cat:*)",
      "Bash(chmod:*)",
      "Bash(cp:*)",
      "Bash(find:*)",
      "Bash(gh api:*)",
      "Bash(gh issue view:*)",
      "Bash(gh issue:*)",
      "Bash(gh pr view:*)",
      "Bash(gh repo view:*)",
      "Bash(git add:*)",
      "Bash(git checkout:*)",
      "Bash(git diff:*)",
      "Bash(git log:*)",
      "Bash(git ls-tree:*)",
      "Bash(git rebase:*)",
      "Bash(git reset:*)",
      "Bash(git restore:*)",
      "Bash(git rev-parse:*)",
      "Bash(git rm:*)",
      "Bash(git test:*)",
      "Bash(grep:*)",
      "Bash(just precommit)",
      "Bash(just --list)",
      "Bash(ls:*)",
      "Bash(mise tasks:*)",
      "Bash(mise ls-remote:*)",
      "Bash(mkdir:*)",
      "Bash(mv:*)",
      "Bash(mvn checkstyle:check:*)",
      "Bash(mvn dependency:tree:*)",
      "Bash(mvn test:*)",
      "Bash(npm --version)",
      "Bash(npm install:*)",
      "Bash(npm run build)",
      "Bash(npm run ci:eslint:*)",
      "Bash(npm run ci:lint)",
      "Bash(npm run ci:typecheck:*)",
      "Bash(npm run lint)",
      "Bash(npm run test)",
      "Bash(npm run test:run:*)",
      "Bash(npm run typecheck)",
      "Bash(npm run typecheck:*)",
      "Bash(npm test)",
      "Bash(npm test:*)",
      "Bash(npx eslint:*)",
      "Bash(npx tsx:*)",
      "Bash(npx vite-node:*)",
      "Bash(op vault list:*)",
      "Bash(rg:*)",
      "Bash(rm:*)",
      "Bash(sed:*)",
      "Bash(test:*)",
      "Read(~/.zshrc)",
      "mcp__brave-search__brave_web_search",
      "mcp__fetch__fetch",
      "mcp__tavily-mcp__tavily-extract",
      "mcp__tavily-mcp__tavily-search",
      "WebFetchTool(domain:raw.githubusercontent.com)",
      "WebFetchTool(domain:www.anthropic.com)",
      "WebFetch(domain:github.com)"
    ],
    "deny": [
      "Bash(npm run dev:*)",
      "Bash(npm run serve:*)",
      "Bash(npm run start:*)",
      "Bash(npm run start &)",
      "Bash(git push:*)",
      "Bash(rm -rf: *)"
    ]
  },
  "enabledMcpjsonServers": [
    "brave-search",
    "tavily-mcp",
    "puppeteer"
  ]
}
